<div class="container">
    <h2 class="formTitle mt-4 mb-2">Login</h2>
    <%- include('./partials/messages') %>
    <form action="/users/login" method="POST" class="mt-4">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        </div>
        <div class="submit-area">
            <button type="submit" class="btn btn-primary d-inline">Login</button>
            <p class="ml-2 d-inline">Not yet registered.? <a href="/users/register">Register</a></p>
        </div>
    </form>
</div>